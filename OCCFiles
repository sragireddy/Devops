import os
from datetime import datetime

def check_files_availability(directory):
    # Get today's date
    today = datetime.today().date()

    # List of file names
    file_names = [
        "file1.txt",
        "file2.txt",
        "file3.txt",
        "file4.txt"
    ]

    # Check if each file was created or modified today
    for file_name in file_names:
        file_path = os.path.join(directory, file_name)
        if os.path.exists(file_path):
            file_time = datetime.fromtimestamp(os.path.getmtime(file_path)).date()
            if file_time == today:
                print("1")
            else:
                print("0")
        else:
            print("0")

if __name__ == "__main__":
    directory = "/path/to/your/directory"  # Replace with the directory path
    check_files_availability(directory)

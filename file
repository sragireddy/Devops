import os
import csv
from datetime import datetime

# List of directories to check files
directories_to_check = ['/path/to/cme_directory', '/path/to/occ_directory', '/path/to/ice_directory']

# Function to check file availability
def check_file_availability(file_path):
    return os.path.exists(file_path)

# Get today's date in the format YYYY-MM-DD
today_date = datetime.now().strftime('%Y-%m-%d')

# Define CSV file names for each directory
csv_file_names = {
    '/path/to/cme_directory': 'cme.csv',
    '/path/to/occ_directory': 'occ.csv',
    '/path/to/ice_directory': 'ice.csv',
}

# Define file prefixes for each directory
file_prefixes = {
    '/path/to/cme_directory': 'ent',
    '/path/to/occ_directory': 'inr',
    '/path/to/ice_directory': 'pnt',
}

# Iterate through directories
for directory_path in directories_to_check:
    # List all files in the directory
    files_in_directory = [f for f in os.listdir(directory_path) if os.path.isfile(os.path.join(directory_path, f))]

    # Create a list to store results
    file_availability_data = []

    # Check availability for each file created today and matches the prefix
    for file_name in files_in_directory:
        file_path = os.path.join(directory_path, file_name)
        
        # Get the file creation time
        file_creation_time = datetime.fromtimestamp(os.path.getctime(file_path))
        
        # Check if the file was created today and matches the prefix
        if file_creation_time.strftime('%Y-%m-%d') == today_date and file_name.startswith(file_prefixes[directory_path]):
            availability = check_file_availability(file_path)
            file_availability_data.append({'File Name': file_name, 'Availability': availability})

    # Get the specified CSV file name for the directory
    csv_output_path = os.path.join('/path/to/output/', f'{directory_keys[directory_path]}.csv')
    
    # Export results to CSV
    field_names = ['File Name', 'Availability']

    with open(csv_output_path, mode='w', newline='') as csv_file:
        writer = csv.DictWriter(csv_file, fieldnames=field_names)
        writer.writeheader()
        writer.writerows(file_availability_data)

    print(f"File availability results for today in {directory_path} exported to {csv_output_path}")
